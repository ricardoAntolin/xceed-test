<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/star_wars_splash" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/logo_bottom_margin"
        android:fontFamily="@font/star_wars_outlined"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/logo_line_spacing_extra"
        android:text="@string/star_wars"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/logo_text_size"
        tools:ignore="SpUsage" />
    <!-- Used DP as text size to avoid size change with accessibility preferences -->
</RelativeLayout>